#region-posts.container
  .region
    .page-header
      %h1= page_title!('posts')
    .table-responsive
      %table.table
        %tr
          %th Title
          %th Content
          %th
          %th
          %th

        - @posts.each do |post|
          %tr
            %td= post.title
            %td= post.content
            %td= link_to 'Ver', post, class: 'btn btn-info'
            - if current_admin
              %td= link_to 'Editar', edit_post_path(post), class: 'btn btn-success'
              %td= link_to 'Eliminar', post, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
    .region
      - if current_admin
        .admin-control
          = link_to 'Crear Post', new_post_path, class: 'btn btn-primary'
    .admins
      - if admin_signed_in?
        = current_admin.email
      - else
        = link_to 'Sign up', new_admin_registration_path, class: 'right' 
